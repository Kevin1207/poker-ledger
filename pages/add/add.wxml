<!--pages/add/add.wxml-->
<view class="container">
  <view class="form-card">
    <view class="form-title">添加记录</view>
    
    <!-- 金额输入 -->
    <view class="form-item">
      <view class="label">输赢金额</view>
      <view class="amount-input-group">
        <button class="type-btn {{isWin ? 'active-win' : ''}}" bindtap="selectWin">
          赢 +
        </button>
        <button class="type-btn {{!isWin ? 'active-lose' : ''}}" bindtap="selectLose">
          输 -
        </button>
      </view>
      <input 
        class="amount-input {{isWin ? 'win' : 'lose'}}" 
        type="digit" 
        placeholder="请输入金额" 
        value="{{amount}}"
        bindinput="onAmountInput"
      />
    </view>

    <!-- 备注输入 -->
    <view class="form-item">
      <view class="label">备注（可选）</view>
      <textarea 
        class="note-input" 
        placeholder="例如：线下局、好友局等" 
        value="{{note}}"
        bindinput="onNoteInput"
        maxlength="100"
      />
    </view>

    <!-- 日期选择 -->
    <view class="form-item">
      <view class="label">日期</view>
      <picker mode="date" value="{{date}}" bindchange="onDateChange">
        <view class="date-picker">{{date}}</view>
      </picker>
    </view>

    <!-- 提交按钮 -->
    <button class="submit-btn" bindtap="onSubmit">保存记录</button>
  </view>
</view>
