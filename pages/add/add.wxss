/* pages/add/add.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(to bottom, #f5f5f5, #ffffff);
}

.form-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.amount-input-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.type-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 15rpx;
  background: #f3f4f6;
  color: #666;
  font-size: 28rpx;
  border: 2rpx solid transparent;
}

.type-btn.active-win {
  background: #d1fae5;
  color: #059669;
  border-color: #10b981;
  font-weight: bold;
}

.type-btn.active-lose {
  background: #fee2e2;
  color: #dc2626;
  border-color: #ef4444;
  font-weight: bold;
}

.amount-input {
  width: 100%;
  height: 100rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 15rpx;
  padding: 0 30rpx;
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  box-sizing: border-box;
}

.amount-input.win {
  border-color: #10b981;
  color: #059669;
}

.amount-input.lose {
  border-color: #ef4444;
  color: #dc2626;
}

.note-input {
  width: 100%;
  min-height: 150rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.date-picker {
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 15rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 60rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  line-height: normal;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
}
